<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mcash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mcash_grey</item>
        <item name="colorPrimaryVariant">@color/mcash_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mcash_orange</item>
        <item name="colorSecondaryVariant">@color/mcash_orange_20</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mcash_grey_50</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="bgColor">@color/light_bg</item>
        <item name="bgIconColor">@color/mcash_grey_80</item>
        <item name="foregroundIconColor">@color/mcash_grey</item>
        <item name="iconRippleColor">@color/mcash_grey_20</item>
        <item name="actionRippleColor">@color/dark_bg_15</item>
        <item name="bgSearchColor">@color/white</item>
        <item name="appRippleColor">@color/orange_50</item>
        <item name="toolbarColor">@color/white</item>

        <item name="android:windowBackground">@color/white</item>

<!--        Pin view-->
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>

    <style name="Theme.Mcash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mcash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mcash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>
</resources>