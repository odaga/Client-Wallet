<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="@dimen/spacing_30"
        android:layout_height="@dimen/spacing_30"
        android:indeterminateTint="@color/white"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Loading..."
        android:textColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="@color/mcash_orange"
        tools:text="mcash"
        android:textSize="@dimen/default_size"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:insetTop="@dimen/spacing_0"
        android:insetBottom="@dimen/spacing_0"
        app:cornerRadius="6dp"/>

</merge>