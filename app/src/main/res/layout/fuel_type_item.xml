<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_85ssp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/fuel_type_card_view"
        android:layout_width="@dimen/_75ssp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        app:cardCornerRadius="@dimen/_5ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_40ssp"
                android:layout_marginTop="@dimen/_20ssp"
                android:layout_height="@dimen/_35ssp"
                android:src="@drawable/ic_fuel"
                app:tint="@color/mcash_grey" />


            <TextView
                android:id="@+id/fuel_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_marginTop="@dimen/_5ssp"
                android:text="Fuel Type"
                android:layout_marginBottom="@dimen/_10ssp"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/price_per_liter_text"
        android:layout_width="@dimen/_70ssp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fuel_type_card_view"
        android:text="Price Per Liter"
        android:textAlignment="center"
        android:textColor="@color/mcash_grey"
        android:textSize="12sp" />


</RelativeLayout>