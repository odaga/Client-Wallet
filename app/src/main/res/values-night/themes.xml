<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mcash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mcash_grey</item>
        <item name="colorPrimaryVariant">@color/mcash_grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mcash_orange_light</item>
        <item name="colorSecondaryVariant">@color/mcash_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mcash_grey_50</item>
        <!-- Customize your theme here. -->

        <item name="bgColor">@color/dark_bg_70</item>
        <item name="bgIconColor">@color/dark_bg_50</item>
        <item name="foregroundIconColor">@color/light_bg</item>
        <item name="iconRippleColor">@color/gray_text</item>
        <item name="actionRippleColor">@color/dark_bg_50</item>
        <item name="bgSearchColor">@color/mcash_grey</item>
        <item name="appRippleColor">@color/orange_50</item>
        <item name="toolbarColor">@color/dark_bg_50</item>

        <item name="android:windowBackground">@color/dark_bg_70</item>

<!--        <item name="pinViewStyle">@style/customPinViewStyle</item>-->
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>

    <style name="customPinViewStyle">
        <item name="cursorColor">?colorSecondary</item>
        <item name="cursorWidth">2dp</item>
        <item name="hideLineWhenFilled">false</item>
        <item name="itemCount">4</item>
        <item name="itemHeight">?actionBarSize</item>
        <item name="itemRadius">8dp</item>
        <item name="itemSpacing">@dimen/spacing_12</item>
        <item name="itemWidth">?actionBarSize</item>
        <item name="lineColor">@drawable/pin_view_state_selected</item>
        <item name="lineWidth">2dp</item>
        <item name="viewType">rectangle</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:itemBackground">@drawable/et_border_item_bg</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
    </style>

</resources>