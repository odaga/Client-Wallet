<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/card_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color inside the border -->
            <stroke
                android:width="2dp"
                android:color="@color/mcash_grey" /> <!-- Border color and width -->
            <corners android:radius="8dp"/> <!-- Rounded corners for the border -->
        </shape>
    </item>

    <!-- Inner padding for content -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

</layer-list>
